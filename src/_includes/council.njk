---
layout: base
---

<article class="council-member">
  <div class="member-header">
    <h1>{{ title }}</h1>
    <h2>{{ position }}</h2>
  </div>
  
  <div class="member-content">
    {% if photo %}
    <div class="member-photo">
      <img src="{{ photo }}" alt="{{ title }}" />
    </div>
    {% endif %}
    
    <div class="member-info">
      <p><strong>Email:</strong> {% if email %}{{ email }}{% else %}Not provided{% endif %}</p>
      
      <div class="member-bio">
        {{ content | safe }}
      </div>
    </div>
  </div>
  
  <div class="back-link">
    <a href="/team/">‚Üê Back to Council Members</a>
  </div>
</article>
