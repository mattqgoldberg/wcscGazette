<div class="council-card">
  <div class="card-inner">
    {% if member.data.photo %}
    <div class="member-photo">
      <img src="{{ member.data.photo }}" alt="{{ member.data.title }}" />
    </div>
    {% else %}
    <div class="member-photo no-photo">
      <div class="placeholder">
        {# Show first and last initial #}
        {% set names = member.data.title.split(' ') %}
        {{ names[0][0] ~ names[names.length-1][0] | upper }}
      </div>
    </div>
    {% endif %}
    
    <div class="member-info">
      <h3>{{ member.data.title }}</h3>
      <p class="position">{{ member.data.position }}</p>
      
      <a href="{{ member.url }}" class="view-profile">View Profile</a>
    </div>
  </div>
</div>
